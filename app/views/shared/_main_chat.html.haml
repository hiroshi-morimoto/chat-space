.main_chat
  .main_chat__group
    .main_chat__group--name
      = @group.name
      .main_chat__group--name--member
        Member : 
        - @group.users.each do |users_name|
          = users_name.name

    .main_chat__group--edit
      = link_to edit_group_path(@group), class:'edit-link' do
        Edit

  .main_chat__message
    =render @messages

  .main_chat__message--form
    .messageform
      .messageform__textbox
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'message--in', placeholder: 'type a message'
          .form__mask
            = f.label :image, class: 'image' do
              = icon('fas', 'image', class: 'icon')
              = f.file_field :image, class: 'pic--file'

          .messageform__send--btn
          = f.submit 'Send', class: 'form__submit'